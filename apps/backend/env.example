# Environment
NODE_ENV=development
PORT=8000

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/rates_inventory?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# MFA Settings
MFA_APP_NAME="Rates & Inventory Platform"
MFA_ISSUER="UNO Revenue Management"

# Email Configuration (SMTP)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=noreply@rates-inventory.com
SMTP_FROM_NAME="Rates & Inventory Platform"

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=rates-inventory-assets

# RabbitMQ
RABBITMQ_URL=amqp://admin:password@localhost:5672

# Rate Limiter
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# API Documentation
API_TITLE="Rates & Inventory Management API"
API_DESCRIPTION="Centralized platform for managing rates, inventory, and restrictions across multiple channels"
API_VERSION=1.0.0

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Account Lockout
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Channel Manager APIs (Example configurations)
RATEGAIN_API_URL=
RATEGAIN_API_KEY=

SITEMINDER_API_URL=
SITEMINDER_API_KEY=

DERBYSOFT_API_URL=
DERBYSOFT_API_KEY=

# Rate Shopper API
RATE_SHOPPER_API_URL=
RATE_SHOPPER_API_KEY=

# Audit & Compliance
AUDIT_RETENTION_YEARS=7
ENABLE_AUDIT_LOGGING=true

# Performance & Monitoring
ENABLE_QUERY_LOGGING=false
SLOW_QUERY_THRESHOLD_MS=1000

# Feature Flags
ENABLE_AI_SUGGESTIONS=true
ENABLE_BULK_OPERATIONS=true
ENABLE_CHANNEL_SYNC=true

# Development Only
ENABLE_SWAGGER=true
ENABLE_CORS=true
LOG_LEVEL=debug 